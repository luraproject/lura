{
    "version": 3,
    "name": "My lovely gateway",
    "port": {{.port}},
    "host": [ "http://local.machine" ],
    "cache_ttl": "3600s",
    "timeout": "3s",
    "endpoints": [
        {
            "endpoint": "/static",
            "backend": [
                {
                    "host": [
                        "{{.b4}}"
                    ],
                    "url_pattern": "/"
                }
            ],
            "extra_config": {
                "github.com/devopsfaith/krakend/proxy": {
                    "static": {
                        "strategy": "errored",
                        "data": {
                            "foo": 42,
                            "bar": "foobar"
                        }
                    }
                }
            }
        },
        {
            "endpoint": "/param_forwarding/{first}/constant/{second}",
            "method": "POST",
            "input_headers": [
                "Content-Type",
                "Authorization",
                "X-Y-Z"
            ],
            "backend": [
                {
                    "host": [
                        "{{.b1}}"
                    ],
                    "url_pattern": "/{first}/{second}"
                }
            ]
        },
        {
            "endpoint": "/combination",
            "backend": [
                {
                    "host": [
                        "{{.b2}}"
                    ],
                    "url_pattern": "/",
                    "is_collection": true,
                    "mapping": {
                        "collection": "posts"
                    }
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/",
                    "mapping": {
                        "email": "personal_email"
                    }
                }
            ]
        },
        {
            "endpoint": "/timeout",
            "timeout": "100ms",
            "backend": [
                {
                    "host": [
                        "{{.b5}}"
                    ],
                    "url_pattern": "/"
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/partial/static",
            "backend": [
                {
                    "host": [
                        "{{.b4}}"
                    ],
                    "url_pattern": "/"
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/"
                }
            ],
            "extra_config": {
                "github.com/devopsfaith/krakend/proxy": {
                    "static": {
                        "strategy": "incomplete",
                        "data": {
                            "foo": 42,
                            "bar": "foobar"
                        }
                    }
                }
            }
        },
        {
            "endpoint": "/detail_error",
            "backend": [
                {
                    "host": [
                        "{{.b4}}"
                    ],
                    "url_pattern": "/",
                    "extra_config": {
                        "github.com/devopsfaith/krakend/http": {
                            "return_error_details": "backend_a"
                        }
                    }
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/",
                    "extra_config": {
                        "github.com/devopsfaith/krakend/http": {
                            "return_error_details": "backend_b"
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/partial",
            "backend": [
                {
                    "host": [
                        "{{.b4}}"
                    ],
                    "url_pattern": "/"
                },
                {
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/querystring-params-test/no-params",
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/no-params"
                }
            ]
        },
        {
            "endpoint": "/querystring-params-test/query-params",
            "input_query_strings": [ "a", "b" ],
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/query-params"
                }
            ]
        },
        {
            "endpoint": "/querystring-params-test/url-params/{param}",
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/url-params?p={param}"
                }
            ]
        },
        {
            "endpoint": "/querystring-params-test/all-params",
            "input_query_strings": [ "*" ],
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/all-params"
                }
            ]
        },
        {
            "endpoint": "/header-params-test/no-params",
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/no-params"
                }
            ]
        },
        {
            "endpoint": "/header-params-test/filter-params",
            "input_headers": [ "X-Test-1" ],
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/filter-params"
                }
            ]
        },
        {
            "endpoint": "/header-params-test/all-params",
            "input_headers": [ "*" ],
            "backend": [
                {
                    "host": [ "{{.b6}}" ],
                    "url_pattern": "/all-params"
                }
            ]
        },
        {
          "endpoint": "/sequential/ok/{param}",
          "extra_config": {
            "github.com/devopsfaith/krakend/proxy": {
              "sequential": true
            }
          },
          "backend": [
            {
              "url_pattern": "/provider/{param}",
              "host": [ "{{.b7}}" ],
              "group": "first"
            },
            {
              "url_pattern": "/recipient/{resp0_first.random}",
              "host": [ "{{.b7}}" ],
              "group": "second"
            }
          ]
        },
        {
          "endpoint": "/sequential/ko/first/{param}",
          "extra_config": {
            "github.com/devopsfaith/krakend/proxy": {
              "sequential": true
            }
          },
          "backend": [
            {
              "url_pattern": "/provider/{param}",
              "host": [ "{{.b4}}" ],
              "allow": [ "random" ]
            },
            {
              "url_pattern": "/recipient/{resp0_random}",
              "host": [ "{{.b7}}" ],
              "allow": [ "path" ]
            }
          ]
        },
        {
          "endpoint": "/sequential/ko/last/{param}",
          "extra_config": {
            "github.com/devopsfaith/krakend/proxy": {
              "sequential": true
            }
          },
          "backend": [
            {
              "url_pattern": "/provider/{param}",
              "host": [ "{{.b7}}" ],
              "allow": [ "random" ]
            },
            {
              "url_pattern": "/recipient/{resp0_random}",
              "host": [ "{{.b4}}" ],
              "allow": [ "path" ]
            }
          ]
        },
        {
            "endpoint": "/redirect",
            "backend": [
                {
                    "host": [ "{{.b8}}" ],
                    "url_pattern": "/ignore-me"
                }
            ]
        },
        {
            "endpoint": "/found",
            "backend": [
                {
                    "host": [ "{{.b9}}" ],
                    "url_pattern": "/ignore-me"
                }
            ]
        },
        {
            "endpoint": "/flatmap/delete",
            "backend": [
                {
                    "host": [
                        "{{.b2}}"
                    ],
                    "url_pattern": "/",
                    "is_collection": true,
                    "extra_config": {
                        "github.com/devopsfaith/krakend/proxy": {
                          "flatmap_filter": [
                            {
                                "type": "del",
                                "args": ["collection.*.date"]
                            }
                          ]
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/flatmap/rename",
            "backend": [
                {
                    "host": [
                        "{{.b2}}"
                    ],
                    "url_pattern": "/",
                    "is_collection": true,
                    "extra_config": {
                        "github.com/devopsfaith/krakend/proxy": {
                          "flatmap_filter": [
                            {
                                "type": "move",
                                "args": ["collection.*.date", "collection.*.created_at"]
                            }
                          ]
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/x-forwarded-for",
            "backend": [
                {
                    "host": [ "{{.b11}}" ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/sequence-accept",
            "method": "PUT",
            "extra_config": {
                "github.com/devopsfaith/krakend/proxy": {
                    "sequential": true
                }
            },
            "backend": [
                {
                    "method": "GET",
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/"
                },
                {
                    "method": "PUT",
                    "host": [
                        "{{.b3}}"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/error-status-code/1",
            "backend": [
                {
                    "host": [ "{{.b3}}" ],
                    "url_pattern": "/",
                    "extra_config":{
                        "github.com/devopsfaith/krakend/http":{
                            "return_error_code":true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/error-status-code/2",
            "backend": [
                {
                    "host": [ "{{.b4}}" ],
                    "url_pattern": "/",
                    "extra_config":{
                        "github.com/devopsfaith/krakend/http":{
                            "return_error_code":true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/error-status-code/3",
            "backend": [
                {
                    "host": [ "{{.b3}}" ],
                    "url_pattern": "/",
                    "extra_config":{
                        "github.com/devopsfaith/krakend/http":{
                            "return_error_code":true
                        }
                    }
                },
                {
                    "host": [ "{{.b4}}" ],
                    "url_pattern": "/",
                    "extra_config":{
                        "github.com/devopsfaith/krakend/http":{
                            "return_error_code":true
                        }
                    }
                }
            ]
        }
    ]
}